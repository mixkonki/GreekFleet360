# ============================================================================
# GreekFleet 360 - Environment Configuration Template
# ============================================================================
# IMPORTANT: Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control (it's in .gitignore)

# ============================================================================
# DJANGO CORE SETTINGS
# ============================================================================

# SECRET_KEY: Django's cryptographic signing key
# CRITICAL: Must be unique and kept secret in production
# Generate a new key using:
#   python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-CHANGE-THIS-IN-PRODUCTION

# DEBUG: Enable/disable debug mode
# CRITICAL: Must be False in production for security
# Set to True only in development environments
DEBUG=True

# ALLOWED_HOSTS: Comma-separated list of allowed hostnames
# Example: yourdomain.com,www.yourdomain.com,api.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Database Engine (sqlite3 for development, postgresql for production)
DB_ENGINE=django.db.backends.sqlite3

# Database Name (file path for SQLite, database name for PostgreSQL)
DB_NAME=db.sqlite3

# PostgreSQL Settings (leave empty for SQLite)
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=

# Example PostgreSQL Configuration:
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=greekfleet360_db
# DB_USER=postgres
# DB_PASSWORD=your-secure-password
# DB_HOST=localhost
# DB_PORT=5432

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

# SMTP Server Settings
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False

# Email Credentials
EMAIL_HOST_USER=noreply@example.com
EMAIL_PASSWORD=your-email-password

# Email Addresses
DEFAULT_FROM_EMAIL=noreply@example.com
SERVER_EMAIL=server@example.com
ADMIN_EMAIL=admin@example.com

# Example Gmail Configuration:
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-specific-password

# ============================================================================
# PRODUCTION SECURITY SETTINGS
# ============================================================================
# These are handled in settings.py (commented by default)
# Uncomment in settings.py when deploying to production with HTTPS

# CSRF_COOKIE_SECURE=True
# SESSION_COOKIE_SECURE=True
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000

# ============================================================================
# OPTIONAL: EXTERNAL SERVICES
# ============================================================================

# Add any API keys or external service credentials here
# Example:
# GOOGLE_MAPS_API_KEY=your-api-key
# STRIPE_SECRET_KEY=your-stripe-key
